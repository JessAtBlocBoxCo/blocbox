{% load staticfiles %}
<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="initial-scale=1.0">
  <title>Sign Up and Connect</title>
  <script type="text/javascript" src="http://use.typekit.net/olu7nwz.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  <!--JMY EDITING THE CSS LINKS-->
  <!-- <link rel="stylesheet" href="{% static 'blocbox/css/standardizemain.css' %}"> -->
  <link rel="stylesheet" href="{% static 'blocbox/css/stylesmain.css' %}">
  <!--NOTE TO JB - WE'RE USING BOOSTRAP.CSS ADN NORMALIZE.CSS FROM BOOSTRAP - SUPPOSEED TO HELP WITH RENDERING SHIT ACROSS BROWSERS-->
  <link rel="stylesheet" href="{% static 'blocbox/css/jessbootstrap.css' %}">
  <link rel="stylesheet" href="{% static 'blocbox/css/normalize.css' %}">  
</head>
<body>

<body class="body sign-up clearfix">
  <header class="_container _container-40 clearfix">
    <div class="element element-49"></div>
    <button class="say-hello say-hello-3" onClick="window.location='/login/';" >Sign In</button>
    <div class="element element-55"></div>
    <button class="_button-28">&nbsp;</button>
  </header>

		<!--John: this divider is not covering the whole form, not sure why - i extended the height to 100 but still not working -->
 		<div class="container _container container-23 clearfix" style="height:100%"> 

  		<!--START FORM HERE -->
       <form role="form" id="user_form" method="post" action="." 
       	enctype="multipart/form-data" class="_container clearfix">

        {% if registered %}
	<!--NOTE TO JB: I'M REMOVING ALL FORMATTING - JUST USING PARAGRAP TAGS FOR NOW - YOU CAN RE-ADD THE CLASSES-->
        <p>Thank you for Registering!</p>
        <p><a href="/login/">Login to return to the homepage.</a></p>
        {% else %}
        	<p>Sign Up to Connect with {{host.first_name}}</p>    			
    		<!--	<div class="element element-63"></div> -->
    		<p>In order to connect, we need to ask for some basic information</p>
    			
        {% csrf_token %}
            
        {{ user_form.non_field_errors }}
        
                    <!-- if you just want to paste the full form include following line --> 
            
            
      	<div class="form-group"> <!--NOTE USING CLASSES DEFINED IN BOOTSRAP.CSS -->
    				<!-- NOT INCLUDING LABLES FOR FORM ELEMENTS BUT CAN PUT BACK IN LATER
    				<label for="exampleInputEmail1">Email address</label> --->    				
    				{{ user_form.email.errors }}
    				<label for="id_email">Email Address (Required)</label>
    				<input type="email" class="form-control" name="email" id="id_email"  placeholder="Enter email">				
 				</div>
 				<div class="form-group">  				
    				{{ user_form.password.errors }}
    				<label for="password">Password (Required)</label>
    				<input type="password" class="form-control" name="password" id="id_password"  placeholder="Password">				
 				</div>
 				<div class="form-group">  				
    				{{ user_form.password2.errors }}
    				<label for="password2">Confirm Password (Required)</label>
    				<input type="password" class="form-control" name="password2" id="id_password2"  placeholder="Confirm Password">				
 				</div>
 				
 				<div class="form-group">  
 						{{ user_form.zipcode.errors }}
 						<label for="id_zipcode">Zipcode (Required)</label>
    				<input type="number" class="form-control" name="zipcode" id="id_zipcode"  placeholder="Zipcode">				
 				</div>
 	
 				<div class="form-group">  	
 						<label for="id_first_name">First Name</label>		
    				<input type="text" class="form-control" name="first_name" id="id_first_name"  placeholder="First Name">				
 				</div>
 				<div class="form-group"> 
 						<label for="id_last_name">Last Name</label>	 				
    				<input type="text" class="form-control" name="last_name" id="id_last_name"  placeholder="Last Name">				
 				</div>
 				<div class="form-group">  				
    				<label for="id_st_address1">Street Address 1</label>	
    				<input type="text" class="form-control" name="st_address1" id="id_st_address1"  placeholder="Street Address 1">				
 				</div>
 				<div class="form-group">  				
    				<label for="id_st_address2">Street Address 2</label>	
    				<input type="text" class="form-control" name="st_address2" id="id_st_address2"  placeholder="Street Address 2">				
 				</div>
 				<div class="form-group">  
 						<label for="id_city">City</label>	
    				<input type="text" class="form-control" name="city" id="id_city"  placeholder="City">				
 				</div>
 				<div class="form-group"> 
 						<label for="id_state">State</label>	
    				<input type="text" class="form-control" name="state" id="id_state"  placeholder="State">				
 				</div>

 				

      	<!-- <div class="container container-44 clearfix"> -->
  		  <p class="text text-173">Introduce Yourself (Optional)</p>
  		  <!-- <p class="text text-182">(Optional)</p> -->
  		  <div class="element element-108"></div>
  		  <p class="text text-196">Before you connect, {{host.first_name}} will need to confirm your request.  The information you provide below will help Sylvia confirm you as a neighbor</p>
  		 <!--begin next form -->
  		 	<div class="form-group">  {{ user_form.intro_message.errors }}
  		 			<label for="id_intro_message">Include a personalized message to {{host.first_name}} </label>
    				<input type="text" class="form-control" name="intro_message" id="id_intro_message"  
    				placeholder="Introduce yourself to {{host.first_name}} (350 Character Limit)">				
 				</div>
 				<div class="form-group">  {{ user_form.pickup_time.errors }}
 						<label for="id_pickup_time">Time of day you would typically pick up packages</label>
    				<input type="text" class="form-control" name="pickup_time" id="id_pickup_time"  
    				placeholder=" [CHANGE THIS TO TWO "FROM" AND "TO" TIME FIELDS]">				
 				</div>
 			   			
  		  <div class="element element-119"></div>
      
      <!--ADD OTHER REQUESTS -->
    <p class="text text-173">What other services are you interested in receiving?</p>
		<label class="checkbox-inline">
  		<input type="checkbox" id="id_need_storage" name="need_storage"> Storage
		</label>
		<label class="checkbox-inline">
  		<input type="checkbox" id="id_need_petcare" name="need_petcare"> Pet Care
		</label>
		<label class="checkbox-inline">
  		<input type="checkbox" id="id_need_housesitting" name="need_housesitting"> House Sitting
		</label>
		<label class="checkbox-inline">
  		<input type="checkbox" id="id_need_rentals" name="need_rentals"> Equipment or Party Rentals
		</label>
		<label class="checkbox-inline">
  		<input type="checkbox" id="id_need_laundry" name="need_laundry"> Laundry
		</label>
		<label class="checkbox-inline">
  		<input type="checkbox" id="id_need_letin" name="need_letin"> Let Repairperson In
		</label>	
		<label class="checkbox-inline">
  		<input type="checkbox" id="id_need_childcare" name="need_childcare"> Child Care
		</label>
		<label class="checkbox-inline">
  		<input type="checkbox" id="id_need_plantcare" name="need_plantcare"> Plant Care
		</label>	
		<label class="checkbox-inline">
  		<input type="checkbox" id="id_need_lawn" name="need_letin"> Lawn Care
		</label>	
		<label class="checkbox-inline">
  		<input type="checkbox" id="id_need_carsharing" name="need_carsharing"> Car Sharing
		</label>
		<label class="checkbox-inline">
  		<input type="checkbox" id="id_need_housemaint" name="need_housemaint"> House Maintenance
		</label>	
		<label class="checkbox-inline">
  		<input type="checkbox" id="id_need_autocare" name="need_autocare"> Auto Care
		</label>
		<div class="form-group"> 
 			<label for="id_state">Other Requst (Write In)</label>	
    				<input type="text" class="form-control" name="need_other" id="id_need_other"  placeholder="Other Request">				
 		</div>

  <div class="element element-119"></div>


    	 <div class="checkbox">  				
    	 	  <label>
    				<input type="checkbox" name="host" id="id_host" >Check this box if you're registering as a BlocBox host (receiving packages, etc).		
 					</label>
    			<label>
    				<input type="checkbox" name="hostinterest" id="id_hostinterest" >Check this box if you're interested in learning about serving as a Blocbox host		
 					</label>
 				</div>
    	<button type="submit" name="submit" class="btn btn-default">Sign Up and Request to Connect</button>
    	<p class="text">By continuing, I agree to Blocbox's Terms of Service and Privacy Policy</p>
    	<!--<p class="text text-322">By continuing, I agree to Blocbox's Terms of Service and Privacy Policy</p>
  		 		<footer class="_element-142"></footer> -->
    
    	
    			
    </form>  <!--end form line -->
    
    {% endif %} <!--JMY - this was the end of the register.html code -->
    
    
	</div> <!--end of top divider  -->
    
        


  		
